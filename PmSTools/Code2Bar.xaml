<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PmSTools.Code2Bar"
             Title="Code to Barcode">
    <ContentPage.Content>
        <Grid Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="200" />
                <RowDefinition />
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Label Text="Codis recents"
                   FontSize="14"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />
            <ScrollView
                Grid.Row="1"
                VerticalOptions="FillAndExpand">
                <VerticalStackLayout
                    Padding="2,0"
                    Spacing="2">
                </VerticalStackLayout>
            </ScrollView>
            <HorizontalStackLayout
                Grid.Row="2"
                Spacing="10"
                Padding="5">
                <Button
                    x:Name="ScanNewCodeButton"
                    Text="Scan" 
                    SemanticProperties.Hint="Scan a new code"
                    Clicked="OnScanNewCodeButtonClicked"
                    HorizontalOptions="Fill"/>
                <!--<Button
                    x:Name="BackHomeFromCode2BarButton"
                    Text="Back" 
                    SemanticProperties.Hint="Back"
                    Clicked="OnBackHomeFromCode2BarClicked"
                    HorizontalOptions="Fill"/>-->
            </HorizontalStackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>