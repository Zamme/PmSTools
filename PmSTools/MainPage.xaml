<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="PmSTools.MainPage"
             Title="PmSTools">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Settings" Order="Secondary" Priority="0" Clicked="SettingsMenuItem_OnClicked" />
        <ToolbarItem Text="Help" Order="Secondary" Priority="1" Clicked="HelpMenuItem_OnClicked"/>
        <ToolbarItem Text="About" Order="Secondary" Priority="2" Clicked="AboutMenuItem_OnClicked"/>
    </ContentPage.ToolbarItems>

    <Grid
        RowDefinitions="Auto,*,Auto">
        <Label
            Text="PmS Main Tools"
            FontSize="20"
            HorizontalOptions="Center"
            HorizontalTextAlignment="Center">
        </Label>
        <ScrollView
            Grid.Row="1">
            <Grid
                Padding="2,0"
                Margin="20,35,20,20"
                ColumnSpacing="10"
                RowSpacing="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="200" />
                    <RowDefinition Height="200" />
                    <RowDefinition Height="200" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Button
                    x:Name="Code2BarcodeButton"
                    Grid.Column="0"
                    Text="Code To Barcode"
                    BackgroundColor="LightBlue"
                    BorderColor="BlueViolet"
                    BorderWidth="2"
                    ImageSource="code_to_barcode_01.png"
                    ContentLayout="Top"
                    SemanticProperties.Hint="Crear codis de barres"
                    Clicked="OnCode2BarcodeButtonClicked"
                    HorizontalOptions="Fill" />
                <Button
                    x:Name="FindPlaceButton"
                    Grid.Column="1"
                    Text="Find Place"
                    BackgroundColor="Orange"
                    BorderColor="BlueViolet"
                    BorderWidth="2"
                    ImageSource="find_place_01.png"
                    ContentLayout="Top"
                    SemanticProperties.Hint="Trobar lloc"
                    Clicked="OnFindPlaceButtonClicked"
                    HorizontalOptions="Fill" />
            </Grid>
        </ScrollView>
    </Grid>

</ContentPage>
