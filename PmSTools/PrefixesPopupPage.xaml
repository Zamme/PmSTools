<?xml version="1.0" encoding="utf-8" ?>
<mauiPopup:BasePopupPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                         xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                         xmlns:mauiPopup="clr-namespace:MauiPopup.Views;assembly=MauiPopup"
                         x:Class="PmSTools.PrefixesPopupPage"
                         Title="Prefixes">
                         <!--HeightRequest="350"
                         HorizontalOptions="Center"
                         VerticalOptions="Center"-->
    
    <Grid
        Padding="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="*" />
            <RowDefinition Height="150" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label
            Grid.Row="0"
            Text="Prefixes:"
            FontSize="20"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <ScrollView x:Name="PrefixesScrollView"
                    Grid.Row="1"
                    VerticalOptions="FillAndExpand">
            <VerticalStackLayout x:Name="PrefixesStack"
                                 Padding="5"
                                 Spacing="10"
                                 HorizontalOptions="Fill"
                                 >
            </VerticalStackLayout>
        </ScrollView>
        <Border Grid.Row="2">
                <VerticalStackLayout VerticalOptions="Fill"
                                     Spacing="10">
                    <HorizontalStackLayout HorizontalOptions="Fill"
                                           Spacing="20">
                        <Editor x:Name="PrefixEditor" 
                                    HeightRequest="75"
                                    TextTransform="Uppercase"
                                    FontSize="20"
                                    WidthRequest="200"
                                    IsSpellCheckEnabled="False"
                                    IsTextPredictionEnabled="False"
                                    Placeholder="Prefix...">
                        </Editor>
                        <Button Text="Add"
                                HeightRequest="75"
                                WidthRequest="100"
                                FontSize="22"
                                HorizontalOptions="End"
                                Clicked="OnAddPrefixClicked">
                        </Button>
                    </HorizontalStackLayout>
                    <Button Text="Save"
                            HorizontalOptions="Fill"
                            FontSize="22"
                            Clicked="OnSavePrefixesClicked">
                    </Button>
                </VerticalStackLayout>
        </Border>
    </Grid>
</mauiPopup:BasePopupPage>