<?xml version="1.0" encoding="utf-8" ?>
<mauiPopup:BasePopupPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                         xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                         xmlns:mauiPopup="clr-namespace:MauiPopup.Views;assembly=MauiPopup"
                         x:Class="PmSTools.PrefixesPopupPage"
                         Title="Prefixes">
                         <!--HeightRequest="350"
                         HorizontalOptions="Center"
                         VerticalOptions="Center"-->
    
    <Grid
        Padding="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="*" />
            <RowDefinition Height="150" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label
            Grid.Row="0"
            Text="Prefixes:"
            FontSize="20"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Border Grid.Row="1"
                StrokeThickness="1">
            <ScrollView x:Name="PrefixesScrollView"
                        VerticalOptions="FillAndExpand">
                <VerticalStackLayout x:Name="PrefixesStack"
                                     Padding="5"
                                     Spacing="10"
                                     HorizontalOptions="Fill"
                                     >
                </VerticalStackLayout>
            </ScrollView>
        </Border>
        <Border Grid.Row="2"
                StrokeThickness="2">
                <VerticalStackLayout VerticalOptions="Fill"
                                     HorizontalOptions="Fill"
                                     Spacing="10">
                    <HorizontalStackLayout HorizontalOptions="Fill"
                                           Spacing="10">
                        <Editor x:Name="PrefixEditor" 
                                VerticalTextAlignment="Center"
                                BackgroundColor="White"
                                TextColor="Black"
                                HeightRequest="75"
                                TextTransform="Uppercase"
                                FontSize="20"
                                HorizontalOptions="Start"
                                VerticalOptions="Fill"
                                WidthRequest="200"
                                IsSpellCheckEnabled="False"
                                IsTextPredictionEnabled="False"
                                Placeholder="Prefix...">
                        </Editor>
                        <Button Text="Add"
                                Padding="2"
                                BackgroundColor="Blue"
                                BorderColor="BlueViolet"
                                BorderWidth="2"
                                VerticalOptions="Fill"
                                HorizontalOptions="End"
                                WidthRequest="100"
                                TextColor="WhiteSmoke"
                                HeightRequest="75"
                                FontSize="22"
                                Clicked="OnAddPrefixClicked">
                        </Button>
                    </HorizontalStackLayout>
                    <Button Text="Save"
                            BackgroundColor="Blue"
                            BorderColor="BlueViolet"
                            BorderWidth="2"
                            TextColor="WhiteSmoke"
                            HorizontalOptions="Fill"
                            FontSize="22"
                            Clicked="OnSavePrefixesClicked">
                    </Button>
                </VerticalStackLayout>
        </Border>
    </Grid>
</mauiPopup:BasePopupPage>