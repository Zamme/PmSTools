<?xml version="1.0" encoding="utf-8" ?>
<mauiPopup:BasePopupPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                         xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                         xmlns:mauiPopup="clr-namespace:MauiPopup.Views;assembly=MauiPopup"
                         x:Class="PmSTools.PrefixesPopupPage"
                         Title="Prefixes">
                         <!--HeightRequest="350"
                         HorizontalOptions="Center"
                         VerticalOptions="Center"-->
    
    <Grid
        Padding="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="60" />
            <RowDefinition Height="*" />
            <RowDefinition Height="150" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0"
               Grid.ColumnSpan="3"
               Text="Prefixes"
               FontSize="20"
               VerticalOptions="Center" 
               HorizontalOptions="Center" />
        <Label Grid.Row="1" Grid.Column="0"
               Text="Enabled"
               FontSize="20"
               VerticalOptions="Center" 
               HorizontalOptions="Center" />
        <Label Grid.Row="1" Grid.Column="1"
               Text="Prefix"
               FontSize="20"
               VerticalOptions="Center" 
               HorizontalOptions="Center" />
        <Label Grid.Row="1" Grid.Column="2"
               Text="Delete"
               FontSize="20"
               VerticalOptions="Center" 
               HorizontalOptions="Center" />
        <Border Grid.Row="2"
                Grid.ColumnSpan="3"
                StrokeThickness="1">
            <ScrollView x:Name="PrefixesScrollView"
                VerticalOptions="FillAndExpand"
                >
                <VerticalStackLayout
                    x:Name="PrefixesVSL"
                    VerticalOptions="Fill"
                    HorizontalOptions="Fill">
                    
                </VerticalStackLayout>
            </ScrollView>
        </Border>
        <Border Grid.Row="3"
                Grid.ColumnSpan="3"
                StrokeThickness="2">
                <Grid VerticalOptions="Fill"
                     HorizontalOptions="Fill"
                     RowSpacing="5"
                     ColumnSpacing="5"
                     >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60" />
                        <RowDefinition Height="80" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    <Editor Grid.Row="0" Grid.Column="0" x:Name="PrefixEditor" 
                        VerticalTextAlignment="Center"
                        BackgroundColor="White"
                        TextColor="Black"
                        TextTransform="Uppercase"
                        FontSize="20"
                        HorizontalOptions="Fill"
                        VerticalOptions="Fill"
                        IsSpellCheckEnabled="False"
                        IsTextPredictionEnabled="False"
                        Placeholder="Prefix...">
                    </Editor>
                    <Button Grid.Row="0" Grid.Column="1" Text="Add"
                        Padding="2"
                        BackgroundColor="Blue"
                        BorderColor="BlueViolet"
                        BorderWidth="2"
                        VerticalOptions="Fill"
                        HorizontalOptions="End"
                        WidthRequest="100"
                        TextColor="WhiteSmoke"
                        FontSize="22"
                        Clicked="OnAddPrefixClicked">
                    </Button>
                    <Button Grid.Row="1" Grid.Column="0" Text="Save"
                            BackgroundColor="Blue"
                            BorderColor="BlueViolet"
                            BorderWidth="2"
                            TextColor="WhiteSmoke"
                            HorizontalOptions="Fill"
                            Grid.ColumnSpan="2"
                            FontSize="22"
                            Clicked="OnSavePrefixesClicked">
                    </Button>
                </Grid>
        </Border>
    </Grid>
</mauiPopup:BasePopupPage>